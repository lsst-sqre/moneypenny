{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "The root schema",
  "description": "The root schema comprises the entire JSON document.",
  "default": {},
  "examples": [
    {
      "token": {
        "data": {
          "uid": "jb007",
          "uidNumber": "1007",
          "isMemberOf": [
            {
              "name": "doubleos",
              "id": 500
            },
            {
              "name": "staff",
              "id": 200
            }
          ]
        }
      }
    }
  ],
  "properties": {
    "token": {
      "$id": "$#properties/token",
      "type": "object",
      "properties": {
	"data": {
	  "$id": "$#properties/data",
	  "type": "object",
	  "properties": {
	    "uid": {
	      "$id": "#/properties/uid",
	      "type": "string",
	      "title": "The username of the requesting user",
	      "description": "username (with respect to auth system)",
	      "examples": [
		"jb007"
	      ]
	    },
	    "uidNumber": {
	      "$id": "#/properties/uidNumber",
	      "type": "string",
	      "title": "Numeric UID of user",
	      "minimum": 1,
	      "examples": [
		"1007"
	      ]
            },
	    "isMemberOf": {
	      "$id": "#/properties/isMemberOf",
	      "type": "array",
	      "title": "List of group/GID pairs.",
	      "items": {
		"$id": "$#properties/groupitem",
		"type": "object",
		"properties": {
		  "id": {
		    "$id": "$/properties/gidNumber",
		    "type": "integer",
		    "title": "Numeric GID of group",
		    "minimum": 1,
		    "examples": [
		      200
		    ]
		  },
		  "name": {
		    "$id": "$/properties/gid",
		    "type": "string",
		    "title": "Group name",
		    "examples": [
		      "staff"
		    ]
		  }
		},
		"required": [
		  "id",
		  "name"
		]
	      }
	    }
	  },
	  "required": [
	    "uid",
	    "uidNumber",
	    "isMemberOf"
	  ]
	}
      },
      "additionalProperties": true,      
      "required": [
	"data"
      ]
    }
  },
  "additionalProperties": true,
  "required": [
    "token"
  ]
}
